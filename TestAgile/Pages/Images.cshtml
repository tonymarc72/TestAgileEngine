@page
@model ImagesModel
@{
    ViewData["Title"] = "Image Gallery";

}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Gallery</h2>
        </div>
        <div class="col-md-6" style="float:right">

            <div class="row" style="margin-top: 25px;">
                <div class="col-md-12">
                    <form asp-page-handler="search" method="post">
                        <div class="col-md-9" style="text-align:right;padding-right: 0px;">
                            <input type="text" name="searchtext" class="form-control" />
                        </div>
                        <div class="col-md-3" style="padding-left: 2px;">
                            <button class="btn btn-success btn-sm">Search</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

<hr />

<div class="container">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            @if (Model.ImgList != null)
            {
                foreach (var imgModel in Model.ImgList)
                {
                    <div class="col-lg-2  col-md-3 col-sm-4" style="margin-bottom:10px">
                        <img style="width:150px; height:150px;" src=@imgModel.Cropped_picture />

                        <div>
                            @imgModel.Author
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

<hr />






